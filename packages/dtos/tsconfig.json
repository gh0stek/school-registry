{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "pretty": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
